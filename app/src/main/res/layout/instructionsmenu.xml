<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instructionmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.abigail.ClubConnect.Club_Instruction">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/cc"
        android:id="@+id/imageView2"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:text="Instructions"
        android:textSize="40sp"
        android:textColor="@android:color/holo_red_dark"
        android:textAlignment="center"
        android:paddingTop="48dp"
        android:layout_alignParentTop="true"
        android:id="@+id/textView" />

    <Button
        android:text=" "
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button9"
        android:background="@android:drawable/ic_delete" />

    <TextView
        android:text="      Select new Club to create a New Club, or select Edit Club to make edits to your existing club.
        You can only own one club per username. Make sure your username is spelled correctly. You must enter a username. Keywords should start with an uppercase letter. Students will search for clubs by keyword. Empty fields will not be edited.
        Hit the save button to save changes or to create a new club. Come back and edit later. "
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/button9"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:textSize="22sp" />


</RelativeLayout>